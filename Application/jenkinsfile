  pipeline {
    agent any


    stages {
        stage('Checkout Code') {
            steps {
                echo 'scm git'
                git branch: 'main', url: 'https://github.com/PreethaRedd/ansi-k8sPROJECT.git'
            }
        }
    	

        stage('BuildingJar') {
            steps {
                echo 'maven build'
                sh 'cd Application && mvn clean package'
            }
        }
		
		
        stage('sonar') {
            steps {
                echo 'scanning project'
                sh 'ls -ltr'
                sh '''cd Application && mvn sonar:sonar \\
                      -Dsonar.host.url=http://http://54.197.182.253:9000\\
                      -Dsonar.login=sqa_6bce15c15637a2789f7f1c94460601550b5e3eb7'''
            }
    	}
       stage('Build docker image'){
            steps{
                script{
                    echo 'docker image build'
					sh 'cd Application && docker build -t preethareddy/k8s:${BUILD_NUMBER} .'
                }
            }
        }
		
       stage('docker image scan'){
        steps{
            sh "trivy image preethareddy/k8s:${BUILD_NUMBER}"
        }
    }		
         

		 stage('Push image to Hub'){
            steps{
                script{
                   withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerhub')]) {
                   sh 'docker login -u preethareddy -p ${dockerhub}'

              }
                   sh 'docker push preethareddy/k8s:${BUILD_NUMBER}'
                }
            }
        }
		
      stage('Update kubernetes Deployment manifest File') {
        environment {
            GIT_REPO_NAME = "ansi-k8sPROJECT"
            GIT_USER_NAME = "PreethaRedd"
        }
        steps {
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                sh '''
                    git config user.email "37preethareddy@gmail.com"
                    git config user.name "PreethaRedd"
                    BUILD_NUMBER=${BUILD_NUMBER}
                  
                    sed -i "s/k8s:.*/k8s:${BUILD_NUMBER}/g" Ansible/k8s_deployment.yaml
                    git add .
                    git commit -m "Update deployment image tag to version ${BUILD_NUMBER}"
                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
            }
        }
    }

    stage('k8s Deployment using ansible'){
            steps{
              
                    script{
                        ansiblePlaybook credentialsId: 'ssh', disableHostKeyChecking: true, installation: 'ansible', inventory: '/etc/ansible/', playbook: 'Ansible/ansible_k8s_deploy_playbook.yaml'
                   
                }
            }
        }
}
}

